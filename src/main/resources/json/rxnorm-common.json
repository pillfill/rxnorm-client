          "type": "string"
        },
        "userInput": {
          "$ref": "rxnorm-common.json#/definitions/userInput"
        }
      }
    },
    "interactionType":{
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string"
          },
          "minConceptItem": {
            "$ref": "#definitions/minConceptItem"
          },
          "interactionPair": {
            "$ref": "#definitions/interactionPair"
          }
        }
      }
    },
    "fullInteractionType":{
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string"
          },
          "minConcept": {
            "type": "array",
            "items": {
              "$ref": "#definitions/minConceptItem"
            }
          },
          "interactionPair": {
            "$ref": "#definitions/interactionPair"
          }
        }
      }
    },
    "userInput": {
      "id": "http://apothesource.com/rxnorm/userInput",
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "rxcui": {
          "type": "string"
        }
      }
    },
    "interactionPair": {
      "id": "http://apothesource.com/rxnorm/interaction/interactionPair",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "interactionConcept": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/interactionConcept"
            }
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
