{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "minConceptItem": {
      "id": "http://apothesource.com/rxnorm/minConceptItem",
      "type": "object",
      "properties": {
        "rxcui": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "tty": {
          "type": "string"
        }
      }
    },
    "interactionConcept": {
      "id": "http://apothesource.com/rxnorm/interaction/interactionConcept",
      "type": "object",
      "properties": {
        "minConceptItem": {
          "$ref": "#/definitions/minConceptItem"
        },
        "sourceConceptItem": {
          "$ref": "#/definitions/sourceConceptItem"
        }
      }
    },
    "sourceConceptItem": {
      "id": "http://apothesource.com/rxnorm/sourceConceptItem",
      "extends": {"$ref":"#/definitions/minConceptItem"},
      "properties": {
        "url": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "interactionBaseResponse": {
      "type": "object",
      "javaType": "com.apothesource.pillfill.rxnorm.datamodel.interaction.InteractionBaseResponse",
      "properties": {
